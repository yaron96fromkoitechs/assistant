{
  "version": "2.4.2",
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "exclude": ["node_modules"],
  "include": ["src", "src/common/telegram/.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
